

{% extends 'base.html.twig' %}

{% block title %}Saison #{{ season.number }} : {{program.title}}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="container">
            <div class="season_description">
                <h1>{{program.title}} : Saison {{ season.number }}</h1>
                <p>{{ season.description }}</p>
                <ul>
                    <h3>Lise des épisodes :</h3>
                    {% for episode in season.episode %}
                    <a href="{{ path('program_episode_show', {programId: program.id, seasonId: season.id, episodeId: episode.id}) }}">  Episode  {{ episode.number}} : {{episode.title}}</a><br>
                    {% endfor %}
                </ul>
            </div>

            <a href="{{ path("program_show", { id: program.id }) }}"> Retour à la liste des saisons</a>
            </a>
        </div>
    </div>

{% endblock %}

