{% extends 'base.html.twig' %}
{% block title %}Série n°{{ program.id }} : {{program.title}}{% endblock %}

{% block body %}
  <div class="media">
    <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
    <div class="media-body">
      <h1 class="mt-0">{{ program.title }}</h1>
      <p>{{ program.summary }}</p>
      <p>Catégorie : {{ program.category.name }}</p>

      <p>Saisons : </p>     
      {% for season in program.season %}
        <ul>
          <a href="{{ path('program_season_show', {programSlug: program.slug, seasonId:season.id}) }}">Saison {{ season.number}}</a>
        </ul>
      {% endfor %}
      <p>Acteurs :</p>
      {% for actor in program.actors %}
        <ul>
        <a href="{{ path('program_actor_show', {programSlug: program.slug, actorId:actor.id}) }}">{{ actor.name}}</a>
        </ul>
      {% else %}
        <li>Aucun acteur pour cette série</li>
      {% endfor %}
      <a href="{{ path('season_new') }}"> 
        Ajouter une saison
      </a><br>
      <a href="{{ path('actor_new') }}"> 
        Ajouter un acteur
      </a><br>
      <a href="{{ path('program_index') }}">
      Retour à la liste des programmes
      </a>
    </div>
  </div>
{% endblock %}